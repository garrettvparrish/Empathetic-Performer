		<tr>
			<td class="collective-metric-column">
				<h2> Intensity Level Synchrony </h2>
			</td>
			<td class="collective-metric-column">
				<h2> Intensity Variation Synchrony</h2>
			</td>
			<td class="collective-metric-column">
				<h2> Rhythmic Business Synchrony</h2>
			</td>
			<td class="collective-metric-column">
				<h2> Rhythmic Variation Synchrony</h2>
			</td>
			<td class="collective-metric-column">
				<h2> Melodic Business Synchrony</h2>
			</td>
			<td class="collective-metric-column">
				<h2> Melodic Variation Synchrony</h2>
			</td>
			<td class="collective-metric-column">
				<h2> Pattern Synchrony</h2>
			</td>
			<td class="collective-metric-column">
				<h2> Articulation Synchrony</h2>
			</td>
